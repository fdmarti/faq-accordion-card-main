---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/images/favicon-32x32.png' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&display=swap'
			rel='stylesheet'
		/>
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--veryDarkDesaturedBlue: hsl(238, 29%, 16%);
		--softRed: hsl(14, 88%, 65%);
		--veryDarkGreyshBlue: hsl(237, 12%, 33%);
		--darkGreyshBlue: hsl(240, 6%, 50%);
		--lightGreyshBlue: hsl(240, 5%, 91%);
		--white: #fff;

		--lightViolet: #ab68eb;
		--lightBlue: #6663e6;
	}

	* {
		font-family: 'Kumbh Sans', sans-serif;
		padding: 0;
		margin: 0;
	}

	img {
		width: 100%;
	}

	body {
		height: 100vh;
		background: rgb(171, 104, 235);
		background: linear-gradient(
			180deg,
			rgba(171, 104, 235, 1) 0%,
			rgba(102, 99, 230, 1) 100%
		);
	}

	main {
		padding: 20px;
	}

	p {
		font-size: 14px;
	}

	@media (max-width: 992px) {
		p {
			font-size: 12px;
		}
	}
</style>
